{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,

    "lib": ["es2017", "esnext.asynciterable"],
    "baseUrl": "src",
    "sourceMap": true,
    "paths": {
      "*": ["*"]
    },

    "strict": true,

    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "checkJs": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
  },
}
